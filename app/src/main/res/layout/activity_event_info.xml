<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical"
                                             tools:context="www.gatherup.com.gatherup.activities.EventInfoActivity"
                                             android:background="@drawable/bg_abstract">

    <TextView
        android:id="@+id/event_info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/event_info_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_info_title_tv"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/event_info_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/event_info_day"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_info_title_tv"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/event_info_address"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/address"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_info_time"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/event_info_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hosted_by"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_info_title_tv"
        android:layout_marginEnd="7dp"/>


    <Button
        android:id="@+id/event_info_rsvp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="I am going"
        android:textSize="16sp"
        android:background="@drawable/rounded_btn"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/event_info_open_map_btn"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_info_address"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/event_info_open_map_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="View Map"
        android:textSize="16sp"
        android:background="@drawable/rounded_btn"
        tools:layout_conversion_absoluteX="155dp"
        tools:layout_conversion_absoluteY="141dp"
        tools:layout_conversion_absoluteWidth="140dp"
        tools:layout_conversion_absoluteHeight="48dp"
        app:layout_constraintRight_toLeftOf="@+id/event_info_report"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_info_address"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/event_info_report"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@color/colorRed"
        android:text="@string/report"
        tools:layout_conversion_absoluteX="306dp"
        tools:layout_conversion_absoluteY="142dp"
        tools:layout_conversion_absoluteWidth="73dp"
        tools:layout_conversion_absoluteHeight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/event_info_address"
        android:layout_marginRight="8dp"/>


    <TextView
        android:id="@+id/event_info_attendees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/people_are_going"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_info_rsvp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/details_LBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/details"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_info_attendees"/>
    <ScrollView
        android:layout_width="368dp"
        android:layout_height="131dp"
        android:id="@+id/scrollView2"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/details_LBL"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="NestedScrolling">
        <TextView
            android:id="@+id/event_info_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="Text goes here"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>
    </ScrollView>


    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Event"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintRight_toLeftOf="@+id/ratingBar"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_marginStart="8dp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        android:layout_marginEnd="4dp"/>

    <Button
        android:id="@+id/event_info_edit_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Edit detailedEvent (Don't implement by now)"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/event_info_owner"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/truck_on_mtn"
        android:layout_width="0dp"
        />
</android.support.constraint.ConstraintLayout>
</ScrollView>