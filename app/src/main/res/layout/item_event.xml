<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_event_day_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="daynum"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:gravity="start"/>

            <TextView
                android:id="@+id/item_event_day_ofw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="day"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:gravity="end"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_event_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@color/app_background" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title of the detailedEvent"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:text="Location of the detailedEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/item_event_address" />

        <TextView
            android:text="DayOfWeek HH:MM PM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/item_event_date" />

        <TextView
            android:text="Category of the detailedEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_event_category" />

        <TextView
            android:text="People: X"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_event_people" />
    </LinearLayout>


</LinearLayout>
