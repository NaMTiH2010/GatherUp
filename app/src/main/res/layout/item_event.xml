<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:text="day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_event_day_ofw"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"/>

        <TextView
            android:text="daynumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/item_event_day_number" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:text="Title of the event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/item_event_title" />

        <TextView
            android:text="Location of the event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/item_event_address" />

        <TextView
            android:text="DayOfWeek HH:MM PM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/item_event_date" />

        <TextView
            android:text="Category of the event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_event_category" />

        <TextView
            android:text="People: X"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_event_people" />
    </LinearLayout>


</LinearLayout>
